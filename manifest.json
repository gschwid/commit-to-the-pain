{
    "manifest_version": 2,
    "name": "Suffering",
    "version": "1.0",
    "description": "Tool to help you with coding practice",
    "permissions": [
        "storage",
        "webRequest",
        "webNavigation",
        "webRequestBlocking",
        "tabs",
        "*://*/*",
        "cookies",
        "webRequestFilterResponse.serviceWorkerScript"
    ],
    "background": {
        "scripts": [
            "background_scripts/redirect.js"
        ],
        "persistent": false,
        "type": "module"
    },
    "web_accessible_resources": [
    "SelectProblem.html",
    "select_problem.js"
  ],
    "content_scripts": [
        {
            "matches": [
                "*://*.leetcode.com/*"
            ],
            "js": [
                "content_scripts/get-random-problem.js"
            ]
        }
    ]
}